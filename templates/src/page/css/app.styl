    color #282828

.preview-photo-small
  width 24%

.social-car
  width 80%
  margin auto
  padding 30px 0
  border-bottom 1px solid #282828
  h2
    font-weight bold
    font-size 20px
    color #282828
  .social-networks
    margin-top 20px
    margin-bottom 20px
    i
      color #282828
      font-size 45px
      margin-right 2%
  a
    color #282828
    font-size 12px
    text-decoration underline

.why-autoeder
  width 80%
  margin auto
  border-bottom 1px solid #282828
  padding 30px 0
  h2
    font-family MonseratBold
    margin-bottom 15px
    font-size 24px
    color #282828
  ul
    padding-left 16px
    li
      margin-bottom 7px

.feedback-user-car
  width 80%
  margin auto
  padding 30px 0
  h2
    font-family MonseratBold
    margin-bottom 15px
    font-size 24px
    color #282828
  .comment-user
