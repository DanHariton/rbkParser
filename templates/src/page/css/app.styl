@import "~startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.css"
@import "~normalize.css/normalize.css"
@import "~bootstrap/dist/css/bootstrap.css"
@import '~select2/dist/css/select2.css'
@import "~@ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.css"

@font-face
  font-family MonseratBold
  src url("./font/Montserrat-Bold.otf")

@font-face
  font-family MonseratRegular
  src url('./font/Montserrat-Regular.otf')

@font-face
  font-family MonseratItalic
  src url("./font/Montserrat-ExtraLightItalic.otf")

body
  font-family MonseratRegular
  color #282828

#banner-block
  img
    width 100%

#manufacture
  h1
    font-family MonseratBold
    letter-spacing 3px
    color: #282828;

.car-models
  margin-bottom 60px !important
  h1
    font-weight bold
    text-align center
    margin-top 3%
    font-size 37px

.car-links
  display flex
  flex-direction row
  justify-content space-around

.model-link
  text-decoration underline
  color #282828
  font-size 20px
  p
    font-size 18px
  &:hover
    color #e30613
  img
    max-width 50%
    margin auto


.toyota-cars
  img
    width 170px

.other-cars
  i
    font-size 150px

.searching-level
  display flex
  flex-direction row
  justify-content space-between
  margin-bottom 60px

#items
  .about-car
    margin-top 10px
    display flex
    justify-content space-between
    font-weight bold
    cursor default
  .car-model
    font-family MonseratBold
    letter-spacing 1px
    color #282828
    margin-bottom 0
    font-weight 400
  .car-price
    font-family MonseratBold
    letter-spacing 1px
    color #282828
    margin-bottom 0
    font-weight 400
  .car-manufaktura
    display flex
    justify-content space-between
    cursor default
    font-size 15px
    .car-price-discount
      text-align end
      p:last-child
        font-family MonseratBold
    p
      color #282828
      margin 0
  .link-car
    display flex
    flex-direction row
    justify-content flex-end
    margin-top 12px
    padding-bottom 50px
    color #FFFFFF
    @media (max-width 768px)
      padding-bottom 25px
    a
      padding 17px 60px
      font-size 15px
      text-decoration none
      color #ffffff
      transition background-color 0.4s
      background-color #e30613
      border 1px solid #e30613
      &:hover
        background-color #c40611
        border 1px solid #c40611
        text-decoration underline

.searching-params-block
  margin-bottom 60px !important
  .searching-selector
    border 2px solid #000
    color #000
    border-radius 0
    box-shadow none

.search-car-form
  .container-form-params
    display flex
    flex-direction row
    justify-content space-around
  .submit-search-form
    display flex
    flex-direction row
    justify-content flex-end
    width 98.4%
  .searching-params-forms
    width 30%
    .search-more-params-container
      display flex
      justify-content flex-end

.select2-container--bootstrap4
  .select2-results__option--highlighted
    background-color #e30613 !important

.select2-container--bootstrap4
  .select2-results__option--highlighted
    .select2-results__option[aria-selected="true"]
      background-color #e30613 !importantcar-manufaktura

.submit-search
  margin-top 20px
  color #ffffff
  background-color #e30613
  border 1px solid #e30613
  border-radius 0
  padding 15px 60px
  transition background-color 0.4s
  &:hover
    background-color #c40611
    border 1px solid #c40611
    text-decoration underline

#search-more-params
  color #282828
  font-family MonseratBold
  text-decoration underline
  letter-spacing 1px
  img
    width 14px
    height 8px
    margin-bottom 2.78px

.container-custom
  width 85%
  margin auto

.select2-container--bootstrap4
  .select2-selection
    box-shadow none !important
    border 2px solid #282828 !important
    border-radius 0

.select2-container--bootstrap4
  .select2-container--focus
    .select2-selection
      box-shadow none !important
      border-color #282828 !important

.select2-container--bootstrap4 .select2-selection--single .select2-selection__arrow b
  border-width 8px 7px 0 7px
  margin-left -12px
  margin-top -4px

header img
  width 100%
  height auto

@media (min-width: 1200px)
  .main-container
    max-width 1500px

.margin-bottom-30
  margin-bottom 30px

.margin-bottom-50
  margin-bottom 50px

.margin-bottom-70
  margin-bottom 70px

.expanded-search
  max-height 0
  overflow hidden
  transition max-height 0.5s ease-in-out

.expanded-search.visible
  max-height 400px

#about-car
  margin-top 50px
  display flex
  flex-direction row

.link-back
  width 80%
  margin auto
  display flex
  font-size 15px
  a
